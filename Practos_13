/*Составить программу, которая записывает в два файла заданное количество 
случайных значений, далее считывает их из файлов и считает сумму эквивалентных 
значений из первого и второго файла, если значения из первого файла больше значений из 
второго файла и результат записывает третий файл */
Console.Write("Введите количество случайных значений: ");
int k = int.Parse(Console.ReadLine());
int value;
int sum1 = 0;
int sum2 = 0;

StreamWriter outFile;
StreamReader inFile;

Random rnd = new Random();

outFile = new StreamWriter("1.txt");
for (int i = 0; i < k; i++)
{
    value = rnd.Next(1, 10);
    outFile.WriteLine(value);
}
outFile.Close();

outFile = new StreamWriter("2.txt");
for (int i = 0; i < k; i++)
{
    value = rnd.Next(1, 10);
    outFile.WriteLine(value);
}
outFile.Close();

inFile = new StreamReader("1.txt");
for (int i = 0; i < k; i++)
{
    value = int.Parse(inFile.ReadLine());
    sum1 += value;
}
inFile.Close();

inFile = new StreamReader("2.txt");
for (int i = 0; i < k; i++)
{
    value = int.Parse(inFile.ReadLine());
    sum2 += value;
}
inFile.Close();

outFile = new StreamWriter("3.txt");
if (sum1 > sum2)
    outFile.WriteLine("В 1 файле сумма всех чисел больше, чем во 2");
else if (sum1 < sum2)
    outFile.WriteLine("Во 2 файле сумма всех чисел больше, чем в 1");
else if (sum1 == sum2)
    outFile.WriteLine("Сумма чисел в двух файлах равна");
outFile.Close();
